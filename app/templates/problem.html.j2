{% extends "base.html.j2" %}

{% block content %}
    <div class="headblue"> Problem {{ problem.rules.name }} </div>
    <p><pre>{{ problem.rules.statement }}</pre></p>
<hr>
    <div class="headblue"> Files to download:</div>
    <p></p>
    <table border="1">
        {% for path in paths %}
            <th></th>
            <tr>
                <td><a href=/{{"download?path=" + path}} target="_blank">{{ path.split('/')[-1] }}</a></td>
            </tr>
        {% endfor %}
    </table>

<hr>

    {% if info.logged_in == 1 %}
        <br><div class="headblue"> Your submissions:</div><br>

        <table border="1">
            <tr><th>Id</th><th>ProbName</th><th>Type</th><th>Source</th></tr>

            {% for submission in subList %}

                <tr>
                    <td>{{ submission.id|string }}</td>
                    <td>{{ submission.probName }}</td>
                    <td><a href=/{{ "problemset" + "/" + problem.id|string + "?chSubId" + "=" + submission.id|string }}>{{ submission.type}}</td>
                    <td><a href=/{{ "source" + "/" + submission.id|string }}>
                    <b>View source</b> </td></a>
                </tr>

            {% endfor %}
        </table>
<hr>        
        <div class="headblue">Send new strategy:</div>
        <form action="" method="post" enctype="multipart/form-data">
            {{ form.hidden_tag() }}
            <p>
                {{ form.selectfile(size=32) }}
            </p>
            <p>
                {{ form.submit() }}
            </p>
        </form>
    {% else %}
        <h3>In order to send strategy you have to <a href="/login">log in</a> or <a href="/sign_up"> sign up</a></h3>
    {% endif %}
<hr>
    <div class="headblue">Test your strategy:</div>
    <h2><a href=/{{ "problemset" + "/" + problem.id|string + "/run" }}>Test strategies</a></h2>
<hr>        
    <div class="headblue"> Tournaments</div><br>
    <table border="1">
        <tr><th>Id</th><th>Time</th><th>Link</th></tr>
        {% for tour in tourList %}
            <tr>
                <td>{{ tour.id }}</td>
                <td>{{ tour.time }}</td>
                <td><a href=/{{ "tournament" + "/" + tour.tour_id|string }}><b>Look</b></a></td>
            </tr>
        {% endfor %}
    </table>

    {% if nextTournamentTime != "" %}
        <h2>Next tournament starts at {{ nextTournamentTime }}</h2>
    {% endif %}

    {% if info.admin == 1 %}
        <h2><a href=/{{ "add_tournament?probId" + "=" + problem.id|string }}>Run tournament...</a></h2>
    {% endif %}-

{% endblock %}

