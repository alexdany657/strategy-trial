{% extends "base.html" %}

{% block content %}
    <table border="1">
        <tr><th>Problem {{ problem.rules.name }}</th></tr>
    </table>
    <p><pre>{{ problem.rules.statement }}</pre></p>
    <table border="1">
        <tr><th>Files to download:</th></tr>
        {% for path in paths %}
        <tr>
            <td><a href=/{{"download?path=" + path}} target="_blank">{{ path.split('/')[-1] }}</a></td>
        </tr>
        {% endfor %}
    </table>

    <!-- shouldn't be copypasted -->

    {% if info.logged_in == 1 %}
        <h3>Submissions</h3>

        <table border="1">
            <tr><th>Id</th><th>ProbName</th><th>Type</th><th>Source</th></tr>

            {% for submission in subList %}

                <tr>
                    <td>{{ submission.id|string }}</td>
                    <td>{{ submission.probName }}</td>
                    <td><a href=/{{ "problemset" + "/" + problem.id|string + "?chSubId" + "=" + submission.id|string }}>{{ submission.type}}</td>
                    <td><a href=/{{ "source" + "/" + submission.id|string }}>
                    <b>View source</b> </td></a>
                </tr>

            {% endfor %}
        </table>

        <form action="" method="post" enctype="multipart/form-data">
            {{ form.hidden_tag() }}
            <p>
                {{ form.selectfile(size=32) }}
            </p>
            <p>
                {{ form.submit() }}
            </p>
        </form>
    {% else %}
        <h3>In order to send strategy you have to <a href="/login">log in</a> or <a href="/sign_up"> sign up</a></h3>
    {% endif %}

    <h3>Tournaments</h3>
    <table border="1">
        <tr><th>Id</th><th>Time</th><th>Link</th></tr>
        {% for tour in tourList %}
            <tr>
                <td>{{ tour.id }}</td>
                <td>{{ tour.time }}</td>
                <td><a href=/{{ "tournament" + "/" + tour.tour_id|string }}><b>Look</b></a></td>
            </tr>
        {% endfor %}
    </table>

    {% if info.admin == 1 %}
        <h2><a href=/{{ "add_tournament?probId" + "=" + problem.id|string }}>Run tournament...</a></h2>
    {% endif %}

{% endblock %}

