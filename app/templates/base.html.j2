<html>
    <head>
        <link rel="stylesheet" type="text/css" href="{{url_for('static', filename='styles/trash.css')}}">
        <link rel="shortcut icon" href="{{url_for('static', filename='pictures/iconpicture.png')}}" type="image/x-icon">
        {% if title %}
        <title>{{ title }}</title>
        {% else %}
        <title>Need Title</title>
        {% endif %}
    </head>
    <body bgcolor="#DCDCDC">
        <div>
            <img src="{{ url_for('static',filename='pictures/headpicture.png') }}" alt="-_-">
            <font size="5"><b><u>Strategy trial</u></b></font>
            <a> </a>
            <a href="/home">Home</a>
            <a href="/problemset">Problemset</a>
            {% if info.logged_in == 0 %}
            <a href="/login">Login</a>
            <a href="/sign_up">Sign up</a>
            <a>{{ info.username }}</a>
            {% else %}
            <a href="/submissions">Submissions</a>
            <a href="/logout">Log out</a>
            <a href="/settings">{{ info.username }}</a>
            {% endif %}
            {% if info.admin == 1 %}
                <b>(admin)</b>
                <a href="/add_tournament">Add tournament</a> 
                <a href="/add_problem">Add problem</a>
                <a href="/users_list">List of users</a>
            {% endif %}
        </div>
        {% with messages = get_flashed_messages() %}
        {% for message in messages %}
            {% if message != "" %}
                <p class="message">{{ message }}</p>
            {% endif %}
        {% endfor %}
        {% endwith %}
        <hr>
        {% block content %}{% endblock %}
    </body>
</html>
