{% extends "base.html.j2" %}

{% block content %}
    <h1 class="headblue" >Sign up</h1>
    <form action="" method="post">
        {{ form.hidden_tag() }}
        <p>
            {{ form.name.label }}<br>
            {{ form.name(size=32) }}
        </p>
        <p>
            {{ form.secondname.label }}<br>
            {{ form.secondname(size=32) }}
        </p>
        <p>
            {{ form.username.label }}<br>
            {{ form.username(size=32) }}
        </p>
        <p>
            {{ form.password.label }}<br>
            {{ form.password(size=32) }}
        </p>
        
        <p>
            {{ form.passwordRet.label }}<br>
            {{ form.passwordRet(size=32)}}
        </p>

        <p>
            <input class="button_submit" id="submit" name="submit" type="submit" value="Sign In">
        </p>
    </form>
    <div>
        <p class="login">Already have an account? Sign in <a href="/login">here</a>!</p>
    </div>
{% endblock %}

